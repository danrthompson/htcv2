= form_for :order, :url => populate_orders_path do |f|
  #inside-product-cart-form{"data-hook" => "inside_product_cart_form", :itemprop => "offers", :itemscope => "", :itemtype => "http://schema.org/Offer"}
    - if @product.variants_and_option_values(current_currency).any?
      #product-variants.columns.five.alpha
        %h6.product-section-title= Spree.t(:variants)
        %ul
          - @product.variants_and_option_values(current_currency).each_with_index do |variant, index|
            %li
              = radio_button_tag "products[#{@product.id}]", variant.id, index == 0, 'data-price' => variant.price_in(current_currency).display_price
              %label{:for => ['products', @product.id, variant.id].join('_')}
                %span.variant-description
                  = variant_options variant
                - if variant_price variant
                  %span.price.diff= variant_price variant
    - if @product.price_in(current_currency) and !@product.price.nil?
      .columns.five.if.alpha.else.omega{:class => "<haml:silent> !@product.has_variants? </haml:silent><haml:block> </haml:block><haml:silent> </haml:silent><haml:block> </haml:block>", "data-hook" => "product_price"}
        #product-price.dont-show
          %h6.product-section-title= Spree.t(:price)
          %div
            %span.price.selling{:itemprop => "price"}= display_price(@product)
        .add-to-cart
            
          / Variants Placeholder
          %select.form-control.input-small.dropdown-menu
            %option{:value => "volvo"} Get A Volvo (14.99)
            %option{:value => "saab"} Saab
            %option{:value => "opel"} Opel
            %option{:value => "audi"} Audi


          / Removing Multiple Unit Order----------------------------
          .dont-show
            = number_field_tag (@product.variants_and_option_values.any? ? :quantity : "variants[#{@product.master.id}]"), |
              1, :class => 'title', :min => 1                                                                              |
          = button_tag :class => 'button blue-button', :id => 'add-to-cart-button', :type => :submit do
            = Spree.t(:add_to_cart)
          / HIDDEN -------------------------------------------------

    - else
      #product-price
        %br/
        %div
          %span.price.selling{:itemprop => "price"}= Spree.t('product_not_available_in_this_currency')
