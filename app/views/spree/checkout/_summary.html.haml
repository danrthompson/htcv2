%h3= Spree.t(:order_summary)
%table{"data-hook" => "order_summary"}
  %tbody
    %tr{"data-hook" => "item_total"}
      %td
        %strong
          = Spree.t(:item_total)
          \:
      %td
        %strong= order.display_item_total.to_html
  %tbody#summary-order-charges{"data-hook" => ""}
    - order.adjustments.eligible.each do |adjustment|
      - next if (adjustment.originator_type == 'Spree::TaxRate') and (adjustment.amount == 0)
      %tr
        %td
          = adjustment.label
          \:
        %td= adjustment.display_amount.to_html
  %tr{"data-hook" => "order_total"}
    %td
      %strong
        = Spree.t(:order_total)
        \:
    %td
      %strong
        %span#summary-order-total= @order.display_total.to_html
  - if order.price_adjustment_totals.present?
    %tbody#price-adjustments{"data-hook" => "order_details_price_adjustments"}
      - @order.price_adjustment_totals.each do |label, total|
        %tr.total
          %td
            %strong= label
          %td
            %strong
              %span= total.to_html
