- content_for :page_title do
	- if @featured then
		= raw "Featured Services - Crowdfunding Services | "
	- else
		= raw "#{@selected_category.title} - Crowdfunding Services | "
- content_for :sub_nav do
	.sub_nav_bottom
		%ul.sub_nav.bottom_half
			- if @featured then
				%li.current-selection
					%a{href: services_path(seo_url: "featured")} Featured Services
			- else
				%li
					%a{href: services_path(seo_url: "featured")} Featured Services
			- @service_categories.each do |serv_cat|
				- if serv_cat == @selected_category then
					%li.current-selection 
						%a{href: services_path(seo_url: serv_cat.seo_url)}= serv_cat.title
				- else
					%li
						%a{href: services_path(seo_url: serv_cat.seo_url)}= serv_cat.title

	%a.fancybox.side-scroll.float-right{:href => "\#suggest_a_service"} SUGGEST A SERVICE