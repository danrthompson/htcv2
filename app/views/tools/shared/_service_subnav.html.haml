- content_for :sub_nav do
	.sub_nav_top
		%ul.sub_nav.top_half
			%li 
				%a{:href => tools_resources_path} 
					%h2 Resources
			%li.current-selection
				%a{:href => tools_services_path} 
					%h2 Services
		%h3.float-right.suggest
			%a.fancybox{:href => "\#suggest_a_service"} SUGGEST A SERVICE
	.sub_nav_bottom
		%ul.sub_nav.bottom_half
			- if @featured then
				%li.current-selection
					%a{href: tools_services_path(service_category: "Featured")} Featured Services
			- else
				%li
					%a{href: tools_services_path(service_category: "Featured")} Featured Services
			- @service_categories.each do |serv_cat|
				- if serv_cat == @selected_category then
					%li.current-selection 
						%a{href: tools_services_path(service_category: serv_cat.title)}= serv_cat.title
				- else
					%li
						%a{href: tools_services_path(service_category: serv_cat.title)}= serv_cat.title
