- content_for :sub_nav do
	.sub_nav_top
		%ul.sub_nav.top_half
			%li.current-selection 
				%a{:href => tools_resources_path} 
					%h2 Resources
			%li
				%a{:href => tools_services_path} 
					%h2 Services
		%h3.float-left.suggest
			%a.fancybox{:href => "\#suggest_a_resource"} SUGGEST A RESOURCE
	.sub_nav_bottom
		%ul.sub_nav.bottom_half
			- @resource_categories.each do |resource_cat|
				- if resource_cat == @selected_category then
					%li.current-selection 
						%a{href: tools_resources_path(resource_category: resource_cat.title)}= resource_cat.title
				- else
					%li
						%a{href: tools_resources_path(resource_category: resource_cat.title)}= resource_cat.title
	%p.side-scroll.float-right SCROLL FOR MORE >