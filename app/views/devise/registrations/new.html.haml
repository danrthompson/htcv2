- content_for :head do
  = stylesheet_link_tag    "main_style"



.sign-up-page
  %h2 Sign up
  
  .form-block
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div.field-row
        = f.label :username
        %br/
        = f.text_field :username, class:'form-control', :autofocus => true
      %div.field-row
        = f.label :email
        %br/
        = f.email_field :email, class:'form-control'
      %div.field-row
        = f.label :password
        %br/
        = f.password_field :password, class:'form-control'
      %div.field-row
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, class:'form-control'
      .center-align
        .more-narrow
          -# / - if devise_mapping.rememberable?
          -# /   %div.float-left
          -# /     = f.check_box :remember_me, class:'left-padding'
          -# /     = f.label :remember_me, class:'left-padding'
          %div= f.submit "Sign Up",  class:'button blue-button float-right'
        .pass-options.extra-width
          -# / = render "devise/shared/links"



