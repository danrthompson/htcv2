- content_for :page_title do
  = raw "Log In | "
- content_for :head do
  = stylesheet_link_tag    "main_style"


.sign-in-page
  %h2.teal Sign In

  .form-block
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %div.field-row
        = f.label :email
        %br/
        = f.email_field :email, class:'form-control', :autofocus => true
      %div.field-row
        = f.label :password
        %br/
        = f.password_field :password, class:'form-control'
      .center-align
        .more-narrow
          - if devise_mapping.rememberable?
            %div.float-left
              = f.check_box :remember_me, class:'left-padding'
              = f.label :remember_me, class:'left-padding'
          %div= f.submit "Sign in",  class:'button blue-button float-right'
        .pass-options
          = render "devise/shared/links"
