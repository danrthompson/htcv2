#discussion-board
	%br/ 
	.submit-form.submit-comment
		= form_for CommunityPost.new do |f|
			= f.text_area :body, class: "float-left form-control", id: "discussion-comment", size: '30x10'
			%button.btn.gray-button.float-right.center-align{type: :submit} Share Your Thoughts
	%br/ 

	- @posts.each do |post|

		.discussion-entry
			.divider
			%br/ 
			%p= post.body
			%h3.teal.float-right="- #{post.author}"
			%ul.action-items.float-left
				%li 
					%a{:href => ""}Reply 
				%li.pipe 
					%a &#124
				%li 
					%a{:href => ""}Show Comments 
			%br/

			- post.comments.each do |comment|
				.discussion-entry-mini
					.divider
					%br/ 
					%p= comment.body
					%h3.teal.float-right= "- #{comment.author}"

			.discussion-entry-mini
				.divider
				.submit-form.submit-comment
					= form_for [post, Comment.new] do |f|
						= f.text_area :body, class: 'float-left form-control', id: "discussion-comment", size: '30x10'
						%button.btn.gray-button.float-right.center-align{type: "submit"} Post Reply
		
		