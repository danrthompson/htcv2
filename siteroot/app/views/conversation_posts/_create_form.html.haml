= form_for conversation_post, html: { multipart: true } do |f|
	- if conversation_post.errors.any?
		#error_explanation
			%h2= "#{pluralize(conversation_post.errors.count, "error")} prohibited this post from being saved:"
			%ul
				- conversation_post.errors.full_messages.each do |msg|
					%li= msg
	.field
		= f.label :body
		= f.text_area :body
	.field
		= f.label "Image (optional)"
		= f.file_field :image
	.field
		= f.label "Video url"
		= f.text_field :video_link
	.actions
		= f.submit 'Save'
